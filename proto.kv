Control:
    A:
    B:
    C:

<A>:
    name: "first"
    canvas.before:
        Color:
            rgba: (1,1,1,1)
        Rectangle:
            pos: self.pos
            size: self.size
    
    GridLayout:
        cols: 5
        size: root.width, root.height
           

        BoxLayout:

            orientation: "vertical"
            size: root.width, root.height
            spacing: 20
            padding: 30
            Label:
                text: "Navigation"
                size_hint: (None, None)
                width: 900
                height: 100
                
                background_color: (0.5, 0.5, 0.5, 1)
                canvas.before:
                    Color:
                        rgba: self.background_color
                    Rectangle:
                        size: self.size
                        pos: self.pos
                         
                    
            Button: 
                text: "2nd Screen"
                on_press: app.root.current = "second"
                size_hint: (None, None)
                width: 100
                height: 100
                    
            Button: 
                text: "3rd Screen"
                on_press: app.root.current = "third"
                size_hint: (None, None)
                width: 100
                height: 100
            Button: 
                text: "Action" 
                size_hint: (None, None)           
                width: 100
                height: 100
                on_press: root.ActionI()

            Button: 
                text: "Action" 
                size_hint: (None, None)           
                width: 100
                height: 100
                on_press: root.ActionII()

            Button: 
                text: "Quit" 
                size_hint: (None, None)           
                width: 100
                height: 100
                on_press: root.Quit()                  
        Button:
            text: "+"
            on_press: 
            size_hint: (None, None)
            pos_hint: {'center_x': 0.9, 'center_y': 0}
            width: 100
            height: 100            
            on_press: root.AddTask()
            
            
<B>
    name: "second"
    BoxLayout:

        orientation: "vertical"
        size: root.width, root.height
        Label:
            text: "Second Screen"
        Button: 
            text: "Next"
            on_press: app.root.current = "third"

<C>
    name: "third"
    BoxLayout:

        orientation: "vertical"
        size: root.width, root.height
        Label:
            text: "Third Screen"
        Button: 
            text: "Next"
            on_press: app.root.current = "first"