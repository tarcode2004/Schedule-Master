Control:
    Login:
    Menu:
    Tasks:
    Social:
    Mile_Stone

<Login>:
    name: 'login'
    canvas.before:
        Color:
            rgba: (1,1,1,1)
        Rectangle:
            pos: self.pos
            size: self.size        
    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height
        spacing: 20
        padding: 30
        Label:
            text: "Login"    
            size_hint: 1, 0.2            
            background_color: (0.5, 0.5, 0.5, 1)
            canvas.before:
                Color:
                    rgba: self.background_color
                Rectangle:
                    size: self.size
                    pos: self.pos
        BoxLayout:
            orientation: "horizontal"
            size_hint: 1, 0.2
            Label: 
                text: "Username"                 
                background_color: (0.5, 0.5, 0.5, 1)
                canvas.before:
                    Color:
                        rgba: self.background_color
                    Rectangle:
                        size: self.size
                        pos: self.pos       
            TextInput:
                id: Username
                multiline: False
                
            
        BoxLayout:
            orientation: "horizontal"
            size_hint: 1, 0.2
            Label: 
                text: "Password" 
                background_color: (0.5, 0.5, 0.5, 1)
                canvas.before:
                    Color:
                        rgba: self.background_color
                    Rectangle:
                        size: self.size
                        pos: self.pos                
            TextInput:
                id: Password
                multiline: False
        Label:
            size_hint: 1, 0.4
            text: root.msg
            canvas.before:
                Color:
                    rgba: (0.5, 0.5, 0.5, 1)
                Rectangle:
                    size: self.size
                    pos: self.pos
        BoxLayout:
            size_hint: 1, 0.2
            orientation: "horizontal"            
            Button:
                text: "Exit"
                on_press: root.Quit()
            Button:
                text: "Confirm"
                on_press:
                    root.Confirm(Username.text, Password.text)
                    if root.bool == True: app.root.current = 'menu';

                
            
<Menu>
    name: 'menu'
    background_color: (1, 1, 1, 1)
    canvas.before:
        Color:
            rgba: self.background_color
        Rectangle:
            size: self.size
            pos: self.pos
    FloatLayout:
        size: root.width, root.height
        Button:
            text: root.Username
            on_press: app.root.current = 'login'
            pos_hint: {'center_x': 0.9, 'center_y': 0.9}
            size_hint: 0.1, 0.1
        
        BoxLayout:
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            size_hint: 0.7, 0.4
            orientation: 'vertical'
            Label:
                text: "Current Task: " + root.Task
                background_color: (0.5, 0.5, 0.5, 1)
                canvas.before:
                    Color:
                        rgba: self.background_color
                    Rectangle:
                        size: self.size
                        pos: self.pos
            ProgressBar:
                max: 100
                orientation: 'horizontal'
                value: root.TaskProg            
            Label:
                text: "Next Task: "+ root.NTask
                background_color: (0.5, 0.5, 0.5, 1)
                canvas.before:
                    Color:
                        rgba: self.background_color
                    Rectangle:
                        size: self.size
                        pos: self.pos
            
        BoxLayout:
            orientation: 'horizontal'
            pos_hint: {'center_x': 0.5, 'center_y': 0.1}
            size_hint: 1, 0.2
            Button: 
                text: "Social"
                on_press: app.root.current = "social"
            Button: 
                text: "Tasks"
                on_press: app.root.current = "tasks"
            Button: 
                text: "Milestones"
                on_press: app.root.current = "milestones"
            

<Tasks>
    name: "tasks"
    background_color: (1, 1, 1, 1)
    canvas.before:
        Color:
            rgba: self.background_color
        Rectangle:
            size: self.size
            pos: self.pos
    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height
        Label:
            text: "Tasks"
        Button: 
            text: "Return to main"
            on_press: app.root.current = "menu"
<Social>
    name: "social"
    background_color: (1, 1, 1, 1)
    canvas.before:
        Color:
            rgba: self.background_color
        Rectangle:
            size: self.size
            pos: self.pos
    BoxLayout:

        orientation: "vertical"
        size: root.width, root.height
        Label:
            text: "Social"
        Button: 
            text: "Return to main"
            on_press: app.root.current = "menu"

<Mile_Stone>
    name: "milestones"
    background_color: (1, 1, 1, 1)
    canvas.before:
        Color:
            rgba: self.background_color
        Rectangle:
            size: self.size
            pos: self.pos
    BoxLayout:

        orientation: "vertical"
        size: root.width, root.height
        Label:
            text: "Milestones"
        Button: 
            text: "Return to main"
            on_press: app.root.current = "menu"